    </dependency>
    <!-- for ISO 8601 formatting of dates -->
    <dependency>
      <groupId>joda-time</groupId>
      <artifactId>joda-time</artifactId>
      <version>2.3</version>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>18.0</version>
    </dependency>
    <dependency>
       <groupId>io.dropwizard.metrics</groupId>
       <artifactId>metrics-core</artifactId>
       <version>3.1.0</version>
    </dependency>
    <!-- jetty server gets included thr openfire. However I am adding this
    dependency to ensure that we are compiling/coding against the version
    that is included in openfire -->
